function b() {
  zip -r backup.zip ~/Documents ~/Keys
  gpg -c backup.zip
  rm backup.zip
  mv backup.zip.gpg /run/media/$USER/UNTITLED/
  umount /run/media/$USER/UNTITLED/
}

unalias l

function l() {
  if [[ -z $1 ]]; then
    exa -al
  else
    if [[ -d $1 ]]; then
      exa -al $1
    else
      less $1
    fi
  fi
}

function u() {
  sudo dnf upgrade
  flatpak update
  omz update
  sudo fwupdmgr update
}

